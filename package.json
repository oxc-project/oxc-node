{
  "name": "oxc-node",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@napi-rs/cli": "3.0.0-alpha.88",
    "@napi-rs/wasm-runtime": "^0.2.6",
    "@oxc-node/cli": "workspace:*",
    "@oxc-node/core": "workspace:*",
    "@oxc-project/runtime": "^0.75.0",
    "@types/node": "^24.0.0",
    "ava": "^6.2.0",
    "cross-env": "^7.0.3",
    "dprint": "^0.50.0",
    "emnapi": "^1.3.1",
    "husky": "^9.1.7",
    "lerna": "^8.1.9",
    "lint-staged": "^16.0.0",
    "npm-run-all2": "^8.0.0",
    "oxlint": "^1.0.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "bench": "pnpm --filter=bench bench",
    "format": "dprint fmt && cargo fmt",
    "lint": "oxlint",
    "test": "pnpm --sequential --filter=integrate* run test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.@(js|ts|tsx|yml|yaml|md|json|html|toml)": [
      "dprint fmt"
    ],
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ]
  }
}
