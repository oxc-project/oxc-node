{
  "name": "oxc-node",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "devDependencies": {
    "@napi-rs/cli": "^3.0.0-alpha.62",
    "@napi-rs/wasm-runtime": "^0.2.4",
    "@oxc-node/cli": "workspace:*",
    "@oxc-node/core": "workspace:*",
    "@taplo/cli": "^0.7.0",
    "@types/node": "^20.14.9",
    "ava": "^6.1.3",
    "cross-env": "^7.0.3",
    "emnapi": "^1.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "oxlint": "^0.5.2",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "bench": "pnpm --filter=bench bench",
    "format": "taplo fmt && prettier --write . && cargo fmt",
    "lint": "oxlint",
    "test": "pnpm --sequential --filter=integrate* run test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.@(js|ts|tsx|yml|yaml|md|json|html)": [
      "prettier --write"
    ],
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.toml": [
      "taplo fmt"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
