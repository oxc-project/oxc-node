{
  "name": "integrate-ava",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "ava"
  },
  "devDependencies": {
    "@oxc-node/core": "workspace:*",
    "ava": "^6.4.1"
  },
  "ava": {
    "cache": false,
    "extensions": {
