{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "composite": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@subdirectory/*": ["./src/subdirectory/*"]
    }
  },
  "include": ["src", "package.json"]
}
